{
    "name": "Arkanoid Development",
    "build": {
        "dockerfile": "Dockerfile",
        "context": ".."
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance"
            ],
            "settings": {
                "python.defaultInterpreterPath": "/usr/local/bin/python",
                "pylint.enabled": true
            }
        }
    },
    "forwardPorts": [],
    "postCreateCommand": "pip install -r requirements.txt --no-cache-dir",
    "remoteUser": "root"
} 